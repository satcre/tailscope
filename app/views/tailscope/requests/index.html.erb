<h1 class="text-2xl font-bold mb-6">Slow Requests</h1>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Method</th>
        <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Path</th>
        <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
        <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Duration</th>
        <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Controller#Action</th>
        <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">When</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-100">
      <% @requests.each do |r| %>
        <tr class="hover:bg-gray-50">
          <td class="px-4 py-2 text-sm font-mono font-semibold"><%= r["method"] %></td>
          <td class="px-4 py-2 text-sm font-mono">
            <a href="<%= tailscope.request_path(r["id"]) %>" class="text-blue-600 hover:underline"><%= r["path"] %></a>
          </td>
          <td class="px-4 py-2">
            <% status = r["status"].to_i %>
            <span class="inline-block px-2 py-0.5 text-xs rounded font-medium
              <%= status >= 500 ? 'bg-red-100 text-red-700' : status >= 400 ? 'bg-yellow-100 text-yellow-700' : 'bg-green-100 text-green-700' %>">
              <%= status %>
            </span>
          </td>
          <td class="px-4 py-2"><%= duration_badge(r["duration_ms"]) %></td>
          <td class="px-4 py-2 text-sm text-gray-700"><%= [r["controller"], r["action"]].compact.join("#") %></td>
          <td class="px-4 py-2 text-xs text-gray-500"><%= time_ago_in_words_short(r["recorded_at"]) %></td>
        </tr>
      <% end %>
      <% if @requests.empty? %>
        <tr><td colspan="6" class="px-4 py-8 text-center text-gray-400">No slow requests recorded.</td></tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if @requests.size == per_page %>
  <div class="mt-4 flex justify-end">
    <a href="<%= tailscope.requests_path(page: @page + 1) %>" class="text-sm text-blue-600 hover:underline">Next page &rarr;</a>
  </div>
<% end %>
